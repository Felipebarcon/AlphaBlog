<div class="container">
  <% if @article.errors.any? %>
    <h2>The following errors prevented the article from being saved</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <%end  %>
    </ul>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-white rounded", local: true) do |f| %>
        <div class="formGroupExampleInput row mb-3">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

      <div class="formGroupExampleInput row mb-3">
        <%= f.label :description, class: "col-2 col-form-label" %>
        <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12">
          <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
        </div>
      </div>

      <div class="formGroupExampleInput row mb-3 justify-content-center">
        <%= f.submit class: "d-grid gap-2 col-6 mx-auto btn btn-success mt-2 "%>
      </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "form-group row justify-content-center text-info" %>
  </div>
</div>
