<h1 class="text-center pt-4">Alpha Bloggers</h1>

<div class="apple_pagination">
  <%= will_paginate @users, :container => false %>
</div>

<div class="container">
  <% @users.each do |user|  %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-body rounded">
        <div class="card-header fst-italic"">
          <%= link_to user.username, user_path(user) %>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to gravatar_for(user, size: 150), user_path(user) %>
          </h5>
          <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
            <%= link_to "View profile", user_path(user), class: "btn btn-outline-success" %>

          <%# restrict this action to login user %>
          <% if logged_in? && user == current_user %>
            <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info" %>
          <% end %>
        </div>
        <div class="card-footer text-muted">
          <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
  <% end %>

<div class="apple_pagination">
  <%= will_paginate @users, :container => false %>
</div>
